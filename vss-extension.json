{
    "manifestVersion": 1,
    "id": "bdm-ado",
    "version": "0.0.3",
    "name": "BDM ADO Widgets",
    "publisher": "CrokerLtd",
    "description": "ADO Utilities & Widgets to support BDM Programme.",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "icons": {
        "default": "static/images/logo.png"
    },
    "scopes": [
        "vso.work",
        "vso.graph",
        "vso.identity"
    ],
    "categories": [
        "Azure Boards"
    ],
    "branding": {
        "color": "rgb(34, 34, 34)",
        "theme": "dark"
    },
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "eula.md"
        }
    },
    "links": {
        "getstarted": {
            "uri": "https://www.github.com/mcroker"
        },
        "support": {
            "uri": "https://www.github.com/mcroker"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://www.github.com/mcroker"
    },
    "files": [
        {
            "path": "dist",
            "addressable": true
        },
        {
            "path": "static",
            "addressable": true
        },
        {
            "path": "node_modules/vss-web-extension-sdk/lib",
            "addressable": true,
            "packagePath": "lib"
        }
    ],
    "demands": ["contribution/ms.vss-dashboards-web.widget-sdk-version-2", "contribution/ms.vss-web.charts-service"],
    "contributions": [
        {
            "id": "BDM.CumulativeFlowDiagram",
            "type": "ms.vss-dashboards-web.widget",
            "targets": [
                "ms.vss-dashboards-web.widget-catalog"
            ],
            "properties": {
                "name": "BDM Cumulative-Flow",
                "description": "Cumulative Flow Diagram based on BDM Hybrid Story WorkItem Type.",
                "catalogIconUrl": "static/images/CatalogIcon.png",
                "uri": "static/cfd.html",
                "supportedSizes": [
                    {
                        "rowSpan": 2,
                        "columnSpan": 2
                    }
                ],
                "supportedScopes": [
                    "project_team"
                ]
            }
        }
    ]
}